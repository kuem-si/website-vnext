---
import { navItems } from "../lib/content";
import { normalizePath, withBase } from "../lib/paths";

const path = normalizePath(Astro.url.pathname);
---
<header class="site-header">
  <div class="container header-inner">
    <a href={withBase("/")} class="brand" aria-label="KUEM home">
      <span class="brand-mark">K</span>
      <span class="brand-text">KUEM</span>
    </a>
    <nav aria-label="Main navigation">
      <ul class="nav-list">
        {
          navItems.map((item) => (
            <li>
              <a href={withBase(item.href)} aria-current={path === normalizePath(withBase(item.href)) ? "page" : undefined}>
                {item.label}
              </a>
            </li>
          ))
        }
      </ul>
    </nav>
    <a href={withBase("/contact#demo-form")} class="btn btn-primary">Request a demo</a>
  </div>
</header>
